<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/service_profile_background"
        android:weightSum="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:src="@drawable/default_profile_image"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:gravity="center"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_bold"
                android:textColor="@color/black"
                tools:text="Pranjali Kholgade" />

            <TextView
                android:id="@+id/profile_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_bold"
                android:textColor="@color/black"
                tools:text="32 year old" />

            <TextView
                android:id="@+id/profile_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_bold"
                android:textColor="@color/black"
                tools:text="5.2 Kms away" />

            <TextView
                android:id="@+id/profile_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_bold"
                android:textColor="@color/black"
                tools:text="Ratings: 5" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>